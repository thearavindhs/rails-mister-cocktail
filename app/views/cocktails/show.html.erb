<h3><%= @cocktail.name %></h3>

<% if not @cocktail.doses.empty? %>
  <ul>
    <li>
      <% @cocktail.doses.each do |dose|%>
         <%= dose.description %>
         <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
          <% end %>
      <% end %>
    </li>
  </ul>
<% end %>

<p><%= render "doses/new", cocktail: @cocktail, dose: @dose %><p>

<p><%= link_to "Back to all cocktails", root_path %></p>
